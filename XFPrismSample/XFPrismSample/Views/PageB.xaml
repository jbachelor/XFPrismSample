<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="XFPrismSample.Views.PageB">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Button Text="Go to View C, Remove View B"
                    Command="{Binding GoToViewCAndRemoveSelfFromNavStackCommand}" />
            <Button Text="View C, No Removal"
                    Command="{Binding GoToViewCCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>